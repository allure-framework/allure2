<a class="{{b 'pane' 'overlay'}}" href="#{{baseUrl}}"></a>
<h2 class="{{b 'pane' 'title'}} {{b "testsuites-list" "title"}}">
    xUnit results
</h2>

<div class="tree">
    {{#each suites}}
        <div class="tree-block">
            <div class="tree-block__anchor">
                <span class="node-stats node-anchor">
                    {{statistic.failed}},
                      {{statistic.broken}},
                      {{statistic.canceled}},
                      {{statistic.pending}},
                      {{statistic.passed}}
                </span>
            </div>
            <div class="tree-block__node">
                
                <div class="node-content">
                    <div class="node-content__title">
                        {{name}}
                    </div>
                    <div class="node-content__stats">
                        {{statistic.total}} 
                    </div>
                    <div class="node-content__stats">
                        {{duration time.duration}}
                    </div>
                </div>
                
                <div class="node-inner">
                    <div class="tree tree_inner">
                        {{#each testCases}}
                            <a class="tree-block" href="#{{../../baseUrl}}/{{uid}}">
                                <div class="tree-block__anchor tree-block__anchor_{{status}} tree-block__anchor_last">
                                    <span class="node-anchor">{{status-symbol status}}</span>
                                </div>
                                <div class="tree-block__node">
                                    <div class="node-content node-content_last">
                                        <div class="node-content__title" data-uid="{{uid}}">
                                           {{name}}
                                        </div>
                                        <div class="node-content__stats">
                                            {{duration time.duration}}
                                        </div>
                                    </div>
                                </div>
                            </a>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
