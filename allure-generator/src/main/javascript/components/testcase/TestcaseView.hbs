<a class="pane__overlay" href="#testcase/{{uid}}"></a>
{{#if fullName}}
    <div class="pane__subtitle long-line line-ellipsis">
        <span class="fa fa-files-o fullname__copy" data-tooltip="{{t 'controls.clipboard'}}"></span>
        <span class="fullname__body">{{fullName}}</span>
{{/if}}
</div>
<h2 class="pane__title">
    {{#if statusDetails.flaky}}
        {{allure-icon 'flaky'}}
    {{/if}}
    <span class="label label_status_{{status}}">{{t statusName}}</span>
    <span class="pane__controls">
        <a class="fa fa-expand pane__expand" data-tooltip="{{t 'controls.expand'}}" href="#testcase/{{uid}}?expanded=true"></a>
    </span>
    {{name}}
</h2>

<div class="testcase__failure alert message message_status_{{status}}">
    {{#if statusDetails.message}}
        <pre class="alert__code"><code>{{statusDetails.message}}</code></pre>
    {{else}}
        {{t 'testCase.status.empty'}}
    {{/if}}
    {{#if statusDetails.trace}}
        <div class="testcase__trace-toggle clickable" data-tooltip="{{t 'testCase.status.trace'}}">
            <i class="fa fa-ellipsis-h fa-lg" aria-hidden="true"></i>
        </div>
        <pre class="alert__code testcase__trace"><code>{{statusDetails.trace}}</code></pre>
    {{/if}}
</div>

<div class="testcase__content_tags"></div>
<div class="testcase__content_before"></div>
<div class="testcase__execution"></div>
<div class="testcase__content_after"></div>
