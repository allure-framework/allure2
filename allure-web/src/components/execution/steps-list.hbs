{{#each steps}}
    <div class="step">
        <div class="{{b "step" "title" hasContent=(or steps.length attachments.length parameters.length)}}">
            {{#if (or steps.length attachments.length parameters.length)}}
                <span class="step__arrow block__arrow">{{arrow status}}</span>
            {{else}}
                <span class="step__status">{{allure-icon status}}</span>
            {{/if}}
            <div class="step__name">
            {{name}}
            </div>
            {{> ../../blocks/step-stats/step-stats . baseUrl=../../baseUrl}}
        </div>
        <div class="step__content">
            {{#if parameters}}
                <div class="parameters__table">
                    {{#each parameters}}
                        <div class="parameters__table_row">
                            <div class="parameters__table_cell parameters__table_cell_name line-ellipsis">{{name}}</div>
                            <div class="parameters__table_cell parameters__table_cell_value line-ellipsis">{{value}}</div>
                        </div>
                    {{/each}}
                </div>
            {{/if}}
            {{#each attachments}}
                {{> ../../blocks/attachment-row/attachment-row . baseUrl=../../baseUrl}}
            {{/each}}
            {{> steps-list steps=steps baseUrl=../baseUrl}}
        </div>
    </div>
{{/each}}
