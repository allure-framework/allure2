<span class="step-stats__info">
    <span>
    {{~#if hasContent}}
    (
         {{~#if parameters.length ~}}
            {{~t 'testcase.PARAMETERS' postProcess='interval' count=parameters.length~}}
             <span class="step-stats__info_separator">,&nbsp;</span>
         {{~/if~}}
         {{~#if stepsCount ~}}
            {{~t 'testcase.SUBSTEPS' postProcess='interval' count=stepsCount~}}
            <span class="step-stats__info_separator">,&nbsp;</span>
        {{~/if~}}
        {{~#if attachmentsCount ~}}
            {{~t 'testcase.ATTACHMENTS' postProcess='interval' count=attachmentsCount~}}
            <span class="step-stats__info_separator">,&nbsp;</span>
        {{~/if~}}
    )
    {{~/if~}}
    </span>
    <span class="step-stats__info_time">{{duration time.duration}}</span>
</span>
